/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @bg;
    text-color:             @fg;
	font:				 	"Iosevka 12";
}

window {
    width:      			200px;
    padding:    			10px;
    border:					1px;
    border-radius:          0px;
    border-color:           @bg-alt;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@fg;
}
